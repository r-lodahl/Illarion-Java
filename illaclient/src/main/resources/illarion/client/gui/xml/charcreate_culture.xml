<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <resourceBundle id="charCreateCulture-bundle" filename="charCreateCulture"/>

    <screen id="characterCreateCulture" controller="illarion.client.gui.controller.create.CultureScreenController">
        <layer childLayout="vertical">
            <panel height="422px" width="*" backgroundImage="gui/window_background.png"
                   imageMode="repeat:0,0,1024,422"/>
        </layer>

        <layer childLayout="center">
            <effect>
                <onStartScreen name="fade" start="#00" end="#ff" inherit="true"/>
            </effect>
            <panel width="100%" align="center" valign="center" backgroundColor="#0000"
                   childLayout="vertical" marginBottom="25px">
                <panel width="500px" childLayout="horizontal" align="center">
                    <panel width="45%" childLayout="vertical">
                        <panel width="100%" height="100px" childLayout="center" id="culture1">
                            <control id="#button" name="button" label="" width="80%" height="35px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint" hintText="" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="#image" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center" id="culture3">
                            <control id="#button" name="button" label="" width="80%" height="35px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint" hintText="" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="#image" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center" id="culture5">
                            <control id="#button" name="button" label="" width="80%" height="35px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint" hintText="" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="#image" align="center" valign="bottom" />
                            </panel>
                        </panel>
                    </panel>
                    <panel width="10%" height="*" />
                    <panel width="45%" childLayout="vertical">
                        <panel width="100%" height="100px" childLayout="center" id="culture2">
                            <control id="#button" name="button" label="" width="80%" height="35px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint" hintText="" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="#image" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center" id="culture4">
                            <control id="#button" name="button" label="" width="80%" height="35px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint" hintText="" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="#image" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center" id="culture6">
                            <control id="#button" name="button" label="" width="80%" height="35px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint" hintText="" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="#image" align="center" valign="bottom" />
                            </panel>
                        </panel>
                    </panel>
                </panel>

                <panel width="250px" height="35px" childLayout="center" align="center">
                    <control id="backBtn" name="button" label="${charCreateCulture-bundle.back}"
                             width="100px" height="35px" align="left" />
                    <control id="cancelBtn" name="button" label="${charCreateCulture-bundle.cancel}"
                             width="100px" height="35px" align="right" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
