<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <resourceBundle id="charCreateRace-bundle" filename="charCreateRace"/>

    <screen id="characterCreateRace" controller="illarion.client.gui.controller.create.RaceScreenController">
        <layer childLayout="vertical">
            <panel height="422px" width="*" backgroundImage="gui/window_background.png"
                   imageMode="repeat:0,0,1024,422"/>
        </layer>

        <layer childLayout="center">
            <effect>
                <onStartScreen name="fade" start="#00" end="#ff" inherit="true"/>
            </effect>
            <panel height="300px" width="100%" align="center" valign="center" backgroundColor="#0000"
                   childLayout="vertical" marginBottom="25px">
                <panel width="600px" childLayout="horizontal">
                    <panel width="300px" childLayout="vertical">
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center" marginRight="10px">
                                <image id="humanImage" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" childLayout="vertical" width="190px">
                                <control id="humanBtn" name="button" label="${charCreateGender-bundle.human.title}"
                                         width="170px" height="35px" align="center" marginBottom="10" />
                                <control name="label" text="${charCreateRace-bundle.human.description}" width="170px"
                                         wrap="true" />
                            </panel>
                        </panel>
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center" marginRight="10px">
                                <image id="dwarfImage" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" childLayout="vertical" width="190px">
                                <control id="dwarfBtn" name="button" label="${charCreateGender-bundle.dwarf.title}"
                                         width="170px" height="35px" align="center" marginBottom="10" />
                                <control name="label" text="${charCreateRace-bundle.dwarf.description}" width="170px"
                                         wrap="true" />
                            </panel>
                        </panel>
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center" marginRight="10px">
                                <image id="elfImage" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" childLayout="vertical" width="190px">
                                <control id="elfBtn" name="button" label="${charCreateGender-bundle.elf.title}"
                                         width="170px" height="35px" align="center" marginBottom="10" />
                                <control name="label" text="${charCreateRace-bundle.elf.description}" width="170px"
                                         wrap="true" />
                            </panel>
                        </panel>
                    </panel>
                    <panel width="300px" childLayout="vertical">
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center" marginRight="10px">
                                <image id="halflingImage" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" childLayout="vertical" width="190px">
                                <control id="halflingBtn" name="button" label="${charCreateGender-bundle.halfling.title}"
                                         width="170px" height="35px" align="center" marginBottom="10" />
                                <control name="label" text="${charCreateRace-bundle.halfling.description}" width="170px"
                                         wrap="true" />
                            </panel>
                        </panel>
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center" marginRight="10px">
                                <image id="orcImage" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" childLayout="vertical" width="190px">
                                <control id="orcBtn" name="button" label="${charCreateGender-bundle.orc.title}"
                                         width="170px" height="35px" align="center" marginBottom="10" />
                                <control name="label" text="${charCreateRace-bundle.orc.description}" width="170px"
                                         wrap="true" />
                            </panel>
                        </panel>
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center" marginRight="10px">
                                <image id="lizardImage" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" childLayout="vertical" width="190px">
                                <control id="lizardBtn" name="button" label="${charCreateGender-bundle.lizard.title}"
                                         width="170px" height="35px" align="center" marginBottom="10" />
                                <control name="label" text="${charCreateRace-bundle.lizard.description}" width="170px"
                                         wrap="true" />
                            </panel>
                        </panel>
                    </panel>
                </panel>

                <panel width="250px" height="35px" childLayout="center" align="center">
                    <control id="backBtn" name="button" label="${charCreateGender-bundle.back}"
                             width="100px" height="35px" align="left" />
                    <control id="cancelBtn" name="button" label="${charCreateGender-bundle.cancel}"
                             width="100px" height="35px" align="right" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
